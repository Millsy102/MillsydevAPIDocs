        {
          "name": "Discord OAuth Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"discord_oauth_code_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/discord",
